{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go: build",
            "type": "shell",
            "command": "go build ./...",
            "group": "build",
            "problemMatcher": "$go"
        },
        {
            "label": "go: test",
            "type": "shell",
            "command": "go test ./...",
            "group": "test",
            "problemMatcher": "$go"
        },
        {
            "label": "go: lint",
            "type": "shell",
            "command": "golangci-lint run",
            "problemMatcher": []
        }
    ]
}